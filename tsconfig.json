{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "inlineSources": true,
    "module": "ES2015",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "types": ["svelte", "node"],
	  "strictNullChecks": true,
      "lib": [
        "DOM",
        "ES5",
        "ES6",
        "ES7"
    ]
  },
  "include": ["**/*.ts", "types"],
  "exclude": ["node_modules", "tests"],
  "extends": "@tsconfig/svelte/tsconfig.json",
}
